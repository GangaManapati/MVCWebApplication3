@model IEnumerable<MVCWebApplication3.Models.Product>

@{
    ViewData["Title"] = "GetProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetProducts</h1>
<a asp-action="GetActiveProducts">Active Products</a>  |
<a asp-action="GetDeactivedProducts">Deactive Products</a>
<p>
    <a asp-action="CreateProduct">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                    <a asp-action="UpdateProduct" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="GetProductById" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteProduct" asp-route-id="@item.Id">Delete</a>|
                    <a asp-action="ActivateProduct" asp-route-id="@item.Id">Activate</a> |
                    <a asp-action="DeactivateProduct" asp-route-id="@item.Id">Deactivate</a>
            </td>
        </tr>
}
    </tbody>
</table>
